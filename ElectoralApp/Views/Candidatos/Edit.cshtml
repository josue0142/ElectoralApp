@model ElectoralApp.DTO.CandidatosDTO

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar Candidato</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Estado" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartidoFk" class="control-label"></label>
                <select asp-for="PartidoFk" class="form-control" asp-items="ViewBag.PartidoFk"></select>
                <span asp-validation-for="PartidoFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PuestoFk" class="control-label"></label>
                <select asp-for="PuestoFk" class="form-control" asp-items="ViewBag.PuestoFk"></select>
                <span asp-validation-for="PuestoFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span>Foto</span>
                <br>
                <div class="custom-file">
                    <input asp-for="FotoDePerfil" class="custom-file-input" id="customFile">
                    <label asp-for="FotoDePerfil" class="custom-file-label" for="customFile">Seleccionar Archivo</label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-light" asp-action="Index">Volver a la Lista</a>
</div>


