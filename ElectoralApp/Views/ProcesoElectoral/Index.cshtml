@model ElectoralApp.Models.Ciudadanos

@{
    ViewData["Title"] = "Index";
}

<h1 align="center">Bievenido</h1>

<div class="col-xl-4 container-fluid text-center">
    <hr />
    <br>
    <form asp-action="Index" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label font-weight-bold">Ingrese su documento de identidad</label>
            <br><br>
            <input asp-for="DocumentoDeIdentidad" class="form-control" />
            <span asp-validation-for="DocumentoDeIdentidad" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Ingresar" class="btn btn-warning" />
        </div>
    </form>
</div>

