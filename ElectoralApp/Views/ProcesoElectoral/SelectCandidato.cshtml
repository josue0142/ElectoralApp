@model IEnumerable<ElectoralApp.Models.Candidatos>

@{
    ViewData["Title"] = "Seleccione Candidato";
}


<h1>Seleccione un candidato para el puesto @ViewBag.PuestoElectivoName</h1>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FotoDePerfil)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartidoFkNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PuestoFkNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var photoPath = "~/images/" + ((!string.IsNullOrEmpty(item.FotoDePerfil) ? item.FotoDePerfil : "nophoto.png"));
            <tr class="font-weight-bold">
                <td>
                    <img width="200" height="200" src="@photoPath" alt="Responsive image" asp-append-version="true" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartidoFkNavigation.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PuestoFkNavigation.Nombre)
                </td>
                <td align="right">
                    <a class="btn btn-light btn-sm" asp-action="SelectCandidatoConfirm" asp-route-id="@item.Id">Seleccionar</a>
                </td>
            </tr>
        }
